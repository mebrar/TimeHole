<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beter.timehole">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainikon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddActivityActivity" />
        <activity android:name=".AddReminderActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.beter.timehole.MainActivity" />
        </activity>
        <activity android:name=".AddTagsActivity" />
        <activity
            android:name=".fragments.HowToUseActivity"
            android:label="@string/title_activity_how_to_use"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragments.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragments.EULAActivity"
            android:label="@string/title_activity_eula"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragments.FAQActivity"
            android:label="@string/title_activity_faq"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragments.SendFeedbackActivity"
            android:label="@string/title_activity_send_feedback"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragments.TroubleshootingActivity"
            android:label="@string/title_activity_troubleshooting"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
