<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beter.timehole.AddTagsActivity"
    android:background="#EDE7F6">

    <com.rey.material.widget.EditText
        android:id="@+id/tag_name_input"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Tag Name"
        app:et_inputId="@+id/textfield_tag_name"
        app:et_supportMode="none"
        app:et_labelEnable="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Tag"
        android:id="@+id/dfragbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Color For Your Tag"
        android:id="@+id/pick_color"
        android:layout_below="@+id/tag_name_input"
        android:layout_alignStart="@+id/tag_name_input" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageButton"
        android:src="@drawable/red"
        android:clickable="true"
        android:layout_below="@+id/pick_color"
        android:layout_alignStart="@+id/pick_color"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView3"
        android:src="@drawable/blue_grey"
        android:clickable="true"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="52dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView4"
        android:src="@drawable/brown"
        android:clickable="true"
        android:layout_marginLeft="45dp"
        android:layout_below="@+id/pick_color"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView5"
        android:src="@drawable/green"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView6"
        android:layout_marginLeft="45dp"
        android:src="@drawable/purple"
        android:clickable="true"
        android:layout_above="@+id/imageView9"
        android:layout_toEndOf="@+id/dfragbutton" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/imageView7"
        android:src="@drawable/deepblue"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView6" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView8"
        android:src="@drawable/orange"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView9"
        android:src="@drawable/pink"
        android:clickable="true"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="62dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView10"
        android:src="@drawable/teal"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView11"
        android:src="@drawable/yellow"
        android:clickable="true"
        android:layout_above="@+id/dfragbutton"
        android:layout_alignStart="@+id/imageView9" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView12"
        android:src="@drawable/lblue"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView13"
        android:src="@drawable/deeppurple"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignStart="@+id/imageView10" />

</RelativeLayout>
